[diff]
    tool = diffmerge

[difftool]
    prompt = false

[difftool "diffmerge"]
    cmd = diffmerge "$LOCAL" "$REMOTE"

[merge]
    tool = diffmerge

[mergetool "diffmerge"]
    cmd = diffmerge --merge --result="$MERGED" "$LOCAL" "$BASE" "$REMOTE"
    trustExitCode = true
